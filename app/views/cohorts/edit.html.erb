<h1 class="admin-form-header">Edit Cohort</h1>
<%= form_for :cohort, url: cohort_path(@cohort), method: :patch do |f| %>
    <% if @cohort.errors.any? %>
        <% @cohort.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
    <p>
        <%= f.label(:name, class: 'admin-form-bold') %><br>
        <%= f.text_field(:name, class: 'form-control') %>
    </p>
   

    <p>
        <%= f.label(:start_date, class: 'admin-form-bold') %><br>
        <%= f.text_field(:start_date, class: 'form-control') %>
    </p>

    <p>
        <%= f.label(:end_date, class: 'admin-form-bold') %><br>
        <%= f.text_field(:end_date, class: 'form-control') %>
    </p>

        <p>
        <%= f.label(:course_id, class: 'admin-form-bold') %><br>
        <%= f.text_field(:course_id, class: 'form-control') %>
        </p>
        <p>
        
        <p>
        <%= f.label(:instructor_id, class: 'admin-form-bold') %><br>
        <%= f.text_field(:instructor_id, class: 'form-control') %>
        </p>
        
        <p>
        <%= f.label(:student_id, class: 'admin-form-bold') %><br>
        <%= f.text_field(:student_id, class: 'form-control') %>
    </p>


    <p>
        <%= f.submit(class: 'btn btn-primary', class: 'admin-form') %>
    </p>

     <% end %>