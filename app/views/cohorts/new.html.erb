<h1 class="admin-form">New Cohort</h1>
<%= form_for :cohort, url: cohorts_path do |f| %>
<% if false %>
    <% if @cohort.errors.any? %>
        <% @cohort.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
        <% end %>
                <% end %>

    <% end %>
    <p>
        <%= f.label(:name, class: 'admin-form') %><br>
        <%= f.text_field(:name, class: 'form-control', class: 'admin-form') %>
        <%= f.label(:cohort, class: 'admin-form') %><br>
        <%= f.text_field(:cohort, class: 'form-control', class: 'admin-form') %>
        <%= f.label(:cohort_id, class: 'admin-form') %><br>
        <%= f.text_field(:cohort_id, class: 'form-control', class: 'admin-form') %>
        <%= f.label(:instructor, class: 'admin-form') %><br>
        <%= f.text_field(:instructor, class: 'form-control', class: 'admin-form') %>
        <%= f.label(:instructor_id, class: 'admin-form') %><br>
        <%= f.text_field(:instructor_id, class: 'form-control', class: 'admin-form') %>
    </p>

    <p>
        <%= f.label(:start_date, class: 'admin-form') %><br>
        <%= f.text_field(:start_date, class: 'form-control', class: 'admin-form') %>
    </p>

    <p>
        <%= f.label(:end_date, class: 'admin-form') %><br>
        <%= f.text_field(:end_date, class: 'form-control', class: 'admin-form') %>
    </p>


    <p>
        <%= f.submit(class: 'btn btn-primary', class: 'admin-form') %>
    </p>

    <% end %>