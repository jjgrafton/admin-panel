<h2 class="admin-form-header"> <%= @student.first_name %> <%= @student.last_name %></h2><br>


<p class="admin-form">Date of Birth: <%= @student.d_o_b %></p>
<p class="admin-form">Highest Completed Education: <%= @student.highest_ed %></p>
<p class="admin-form">Courses: <%= @student.course_id %></p>
<p class="admin-form">Cohorts: <%= @student.cohort_id %></p>





<hr>
<%= link_to "Edit", edit_student_path(@student), class: 'btn btn-default', class: 'admin-form' %>
<%= link_to "Delete", student_path(@student), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger', class: 'admin-form-orange'%>