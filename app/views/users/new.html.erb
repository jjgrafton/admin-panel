

<div class="login">
  <div class="container">
    <div class="form">

    <h1 class="admin-form">Login</h1>
<% form_for @user do |f| %>
    <%= f.error_messages %>
    <p class="body-text">
        <%= f.label(:username, class: 'admin-form') %>
        <%= f.text_field(:username, class: 'admin-form') %>
    </p>
    <p class="body-text">
        <%= f.label(:password, class: 'admin-form') %>
        <%= f.password_field(:password, class: 'admin-form') %>
    </p>

    <%= f.submit('Login', class: 'admin-form') %>
<% end %>

  
    </div>
  </div>
</div>