<h2 class="admin-form"> <%= @course.name %></h2>

<p class="body-text">Course: <%= @course.name %></p>
<p class="body-text">Total Hours: <%= @course.total_in_course_hours %></p>
<p class="body-text">Instructor: <%= @course.instructor_name %></p>


<hr>
<%= link_to "Edit", edit_course_path(@course), class: 'btn btn-default', class: 'admin-form' %>
<%= link_to "Delete", course_path(@course), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>